physics:
{
  producers:
  {
    daq:
    {
      wait_time: 0
      module_type: DaqDecoder
      produce_header: true
      validate_header: true
      baseline_calc: true
    }
  }

  analyzers:
  {
    VSTAnalysis:
    {
      module_type: VSTAnalysis
      producer_name: daq
      n_headers: 1
      header_index: 0

      threshold_calc: 3
      threshold_sigma: 5
      noise_range_sampling: 1
      use_planes: false
      verbose: false
      baseline_calc: 2
      refine_baseline: true

      fft_per_channel: true
      fill_waveforms: true
      timing: false
      sum_waveforms: true
      fft_summed_waveforms: true
      verbose: false
    }
  }

  my_producer_modules: [daq]

  outstream: [out1]
  analyze: [VSTAnalysis]
  end_paths: [outstream, analyze]
}

outputs:
{
  out1:
  {
    module_type: RootOutput
    fileName: "decoder_out.root"
  }
}

services:
{
  TFileService: { fileName: "out_no_headers.root"}
  //message: @local::standard_debug
} 

source:
{
  module_type: RootInput
  fileNames: ["/sbnd/data/users/gputnam/nevis_fake_data/filedata.root"]
  //fileNames: ["/home/nfs/gputnam/nevistpc_filedata_test.root"]
}

process_name: SIMPLEPIPELINE

