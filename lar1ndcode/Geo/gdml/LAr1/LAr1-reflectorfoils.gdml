     <materialref ref="TPB"/>
     <solidref ref="TPBLayerCathode"/>
     <physvol>
     <volumeref ref="volCathodePlate2"/>
     <position name="posCathP2" unit="cm" x="0" y="0" z="0"/>
     </physvol>
   </volume-->
    <volume name="volTPBLayerYZ1">
      <materialref ref="TPB"/>
      <solidref ref="TPBLayerYZ"/>
      <physvol>
      <volumeref ref="volReflectorLayerYZ1"/>
      <position name="posReflYZ1" unit="cm" x="0" y="0" z="0"/>
      </physvol>
     </volume>
